#!/bin/sh

function add_to_path {
  local path_to_add ="$1"
  
  # if in $PATH, remove, regardless of if it is in the right place (at the front) or not.
  # replace all occurrences - ${parameter//pattern/string}
  [[ "${PATH}:" == *"${path_to_add}"* ]] && PATH="${PATH//$path_to_add/}"
  # add to front of PATH
  PATH="${path_to_add}$PATH"
}

# If you come from bash you might have to change your $PATH.
export PATH=$HOME/bin:/usr/local/bin:$PATH

### language
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

### add bin & usr local bin to path
export PATH=$HOME/bin:/usr/local/bin:$PATH

### completions
# hyphen-insensitive completion: sensitive completion must be off. _ and - will be interchangeable.
HYPHEN_INSENSITIVE="true"
export HYPHEN_INSENSITIVE


### Bind Keypad keys
# use ctrl+v in the terminal followed by pressing a key to find it's key-code
# 0 . Enter
bindkey -s "^[Op" "0"
bindkey -s "^[Ol" "."
bindkey -s "^[OM" "^M"
# 1 2 3
bindkey -s "^[Oq" "1"
bindkey -s "^[Or" "2"
bindkey -s "^[Os" "3"
# 4 5 6
bindkey -s "^[Ot" "4"
bindkey -s "^[Ou" "5"
bindkey -s "^[Ov" "6"
# 7 8 9
bindkey -s "^[Ow" "7"
bindkey -s "^[Ox" "8"
bindkey -s "^[Oy" "9"
# + -  * /
bindkey -s "^[Ok" "+"
bindkey -s "^[Om" "-"
bindkey -s "^[Oj" "*"
bindkey -s "^[Oo" "/"

# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
HIST_STAMPS="dd.mm.yyyy"
export HIST_STAMPS

### history
# Keep 1000 lines of history within the shell and save it to ~/.zsh_history:
HISTSIZE=1000
SAVEHIST=1000
HISTFILE=~/.zsh_history
